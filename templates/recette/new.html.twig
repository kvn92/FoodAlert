{% extends 'base.html.twig' %}

{% block title %}Ajouter une recette{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Ajouter une Nouvelle Recette</h1>

    <div class="card shadow-lg p-4">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

        <div class="mb-3">
            {{ form_label(form.titre, 'Titre de la recette', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.titre) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.photo, 'Ajouter une photo', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.photo, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.photo) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.preparation, 'Pr√©paration', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.preparation, {'attr': {'class': 'form-control', 'rows': 5}}) }}
            {{ form_errors(form.preparation) }}
        </div>

        <div class="mb-3">
            <label class="form-label">Statut de la recette</label>
            <div class="form-check">
                {{ form_widget(form.isActive.0, {'attr': {'class': 'form-check-input'}}) }}
                <label class="form-check-label" for="{{ form.isActive.vars.id }}_0">Inactif</label>
            </div>
            <div class="form-check">
                {{ form_widget(form.isActive.1, {'attr': {'class': 'form-check-input'}}) }}
                <label class="form-check-label" for="{{ form.isActive.vars.id }}_1">Actif</label>
            </div>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-plus-circle"></i> Ajouter
            </button>
            <a href="{{ path('admin.recettes') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour
            </a>
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
