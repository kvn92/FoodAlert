{% extends 'base.html.twig' %}

{% block title %}
	{{ titrePage }}
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('recette.css') }}">
{% endblock %}

{% block body %}
	<main class="container">

		<header class="text-center my-4">
			<h1 class="page-title">
				<i class="fa fa-utensils"></i> {{ titrePage }}
			</h1>
		</header>

		{# Message Flash de succès #}
		{% for message in app.flashes('success') %}
			<div role="alert" class="alert alert-success text-center">
				<i class="fa fa-check-circle"></i> {{ message }}
			</div>
		{% endfor %}

		<div class="d-flex justify-content-between align-items-center mb-4">
			<h2 class="section-title">
				<i class="fa fa-chart-bar"></i> Statistiques des Recettes
			</h2>
			<a href="{{ path('recette.new') }}" class="btn btn-success">
				<i class="fa fa-plus-circle"></i> Ajouter une recette
			</a>
		</div>

		{# Statistiques des recettes #}
		<section class="col-md-10 mx-auto">
			<div class="row text-center my-4">
				<article class="col-md-3">
					<div class="card shadow-sm border-primary">
						<div class="card-body">
							<h3 class="text-primary">
								<i class="fa fa-list"></i> {{ stats.total }}
							</h3>
							<p class="text-muted">Total de recettes</p>
						</div>
					</div>
				</article>

				<article class="col-md-3">
					<div class="card shadow-sm border-success">
						<div class="card-body">
							<h3 class="text-success">
								<i class="fa fa-check-circle"></i> {{ stats.actives }}
							</h3>
							<p class="text-muted">Recettes activées</p>
						</div>
					</div>
				</article>

				<article class="col-md-3">
					<div class="card shadow-sm border-danger">
						<div class="card-body">
							<h3 class="text-danger">
								<i class="fa fa-times-circle"></i> {{ stats.inactives }}
							</h3>
							<p class="text-muted">Recettes désactivées</p>
						</div>
					</div>
				</article>

				<article class="col-md-3">
					<div class="card shadow-sm border-warning">
						<div class="card-body">
							<h3 class="text-warning">
								<i class="fa fa-heart"></i> tot de la like
							</h3>
							<p class="text-muted">Total de J'aime</p>
						</div>
					</div>
				</article>
			</div>
		</section>

		{# Tableau des recettes avec nouveaux champs #}
		<h2 class="section-title text-center mt-5">
			<i class="fa fa-book"></i> Aperçu des Dernières Recettes
		</h2>

		<table class="table table-striped table-bordered shadow-sm">
			<thead class="table-dark text-center">
				<tr>
					<th>Titre</th>
					<th>Auteur</th>
					<th>J'aime</th>
					<th>Commentaires</th>
					<th>Statut</th>
					<th>Publication</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for recette in recettes %}
					<tr>
						<td class="align-middle text-center">{{ recette.titre }}</td>
						<td class="align-middle text-center">{{ recette.user.pseudo }}</td>
						<td class="align-middle text-center">
							<i class="fa fa-heart text-danger"></i> {{recette.likeRecettes|length }}
						</td>
						<td class="align-middle text-center">
							<i class="fa fa-comments text-info"></i> {{ recette.commentaires|length }}
						</td>
						<td class="align-middle text-center">
							{% if recette.isActive %}
								<a href="{{ path('recette.toggle_statut', { id: recette.id }) }}" title="Désactiver">
									<span class="badge bg-success">
										<i class="fa fa-check"></i> Actif
									</span>
								</a>
							{% else %}
								<a href="{{ path('recette.toggle_statut', { id: recette.id }) }}" title="Activer">
									<span class="badge bg-danger">
										<i class="fa fa-times"></i> Inactif
									</span>
								</a>
							{% endif %}
						</td>
						<td class="align-middle text-center">{{ recette.createAt |date('d/m/Y') }}</td>
						<td class="align-middle text-center d-flex justify-content-center gap-2">
							<a href="{{ path('recette.show', { id: recette.id }) }}" class="btn btn-primary btn-sm">
								<i class="fas fa-eye"></i> Voir
							</a>
							<a href="{{ path('recette.edit', { id: recette.id }) }}" class="btn btn-warning btn-sm">
								<i class="fa fa-pencil-alt"></i> Modifier
							</a>
							<form action="{{ path('recette.delete', { id: recette.id }) }}" method="post" onsubmit="return confirm('Voulez-vous vraiment supprimer cette recette ?');">
								{{ form(deleteForms[recette.id]) }}
							
							</form>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="7" class="text-center text-muted">
							<i class="fa fa-info-circle"></i> Aucune recette enregistrée.
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

	</main>
{% endblock %}
